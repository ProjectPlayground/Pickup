<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pickup.hackvalley.pickup.LoginMenu">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:text="pickup"
        android:paddingTop="50dp"
        android:paddingBottom="80dp"/>

    <ImageView
        android:tint="#000000"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/login_title"
        android:layout_alignTop="@+id/login_title"
        android:layout_toEndOf="@+id/login_title"
        android:layout_toRightOf="@+id/login_title"
        android:id="@+id/imageView"
        android:src="@drawable/logo"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username or Email"
        android:maxLines="1"
        android:layout_below="@+id/login_title"
        android:textStyle="bold"

        android:background="@drawable/text_input"
        android:padding="12dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:imeActionId="@+id/login"
        android:textStyle="bold"

        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/username"

        android:background="@drawable/text_input"
        android:padding="12dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"/>


    <Button
        android:id="@+id/sign_in_button"
        style="?android:textAppearanceSmall"
        android:layout_below="@+id/password"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:text="Log In"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/login_button"
        android:layout_width="160dp"
        />

    <Button
        android:id="@+id/register_button"
        style="?android:textAppearanceSmall"
        android:layout_below="@+id/password"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/sign_in_button"
        android:text="Register"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/register_button"
        android:layout_width="160dp"
        />
    <Button
        android:id="@+id/facebook"
        style="?android:textAppearanceSmall"
        android:layout_below="@+id/register_button"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#1985e5"
        android:textAllCaps="false"

        android:text="Login with Facebook"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/facebook"
        android:layout_width="match_parent"
        />



</RelativeLayout>

